@page "/mantenimientos"
@attribute [Authorize]

<PageTitle>Mantenimientos</PageTitle>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12 col-md-6">
        <RadzenText Text="Mantenimientos" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
    </div>
    <div class="col-12 col-md-6 justify-content-start justify-content-md-end" style="display: flex; align-items: center; flex-wrap: wrap; gap: 0.5rem">
    <RadzenSplitButton Icon="get_app" style="margin-left: 10px; margin-bottom: 10px" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
        <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
        <RadzenSplitButtonItem Text="CSV" Value="csv" />
    </RadzenSplitButton>
    <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
    </div>
</div>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12">
        <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <RadzenDataGrid @ref="grid0"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true"
            Data="@mantenimientos" Count=count LoadData=@Grid0LoadData  TItem="CoralTickets.Server.Models.db_a905b1_coraldb.Mantenimiento" RowDoubleClick="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="CoralTickets.Server.Models.db_a905b1_coraldb.Mantenimiento" Property="idMantenimiento" Title="idMantenimiento">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CoralTickets.Server.Models.db_a905b1_coraldb.Mantenimiento" Property="FechaProgramada" Title="FechaProgramada">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CoralTickets.Server.Models.db_a905b1_coraldb.Mantenimiento" Property="TipoMantenimiento" Title="TipoMantenimiento">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CoralTickets.Server.Models.db_a905b1_coraldb.Mantenimiento" Property="Estado" Title="Estado">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CoralTickets.Server.Models.db_a905b1_coraldb.Mantenimiento" Property="Hora" Title="Hora">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CoralTickets.Server.Models.db_a905b1_coraldb.Mantenimiento" Property="Descripcion" Title="Descripcion">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CoralTickets.Server.Models.db_a905b1_coraldb.Mantenimiento" Property="TIManager" Title="TIManager">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CoralTickets.Server.Models.db_a905b1_coraldb.Mantenimiento" Property="Equipo.TipoEquipo" Title="Equipo">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CoralTickets.Server.Models.db_a905b1_coraldb.Mantenimiento" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="mantenimiento">
                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, mantenimiento)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
</div>
